{% extends '@administrator/base.twig' %}

{% block title %}Settings - {{ parent() }}{% endblock %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>System Settings</h2>
      <p>
        Select the items you want to modify and click the &quot;Edit Settings&quot; button below.
      </p>

      {% if settings %}
      <form method="post">
        {{ include('@administrator/common/form-error-banner.twig') }}

        {% if _ERROR.settings %}
        <p>
          <span class="text-danger">Please, select at least one setting.</span>
        </p>
        {% endif %}

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Name</th>
              <th>Value</th>
              <th>Type</th>
            </tr>
          </thead>
          <tbody>
            {% for setting in settings %}
            <tr>
              <td>
                <input {{ setting.name in _POST.settings ? 'checked' }} id="{{ setting.name }}" name="settings[]" type="checkbox" value="{{ setting.name }}">
              </td>
              <td class="text-left">
                <label for="{{ setting.name }}">{{ setting.title }}</label>
              </td>
              <td>
                <label for="{{ setting.name }}">{{ setting.name }}</label>
              </td>
              <td>
                {% if setting.type == 'bool' %}

                {% if setting.value == 1 %}
                  <span class="glyphicon glyphicon-ok"></span>
                  Enabled
                {% else %}
                  <span class="glyphicon glyphicon-remove"></span>
                  Disabled
                {% endif %}

                {% else %}
                <code>{{ setting.value }}</code>
                {% endif %}
              </td>
              <td>{{ setting.type }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>

        <p>
          <button class="btn btn-default" name="submit" type="submit">Edit Settings</button>
        </p>
      </form>
      {% else %}
      <p>There are no settings to list.</p>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
